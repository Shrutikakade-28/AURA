{
  "name": "aura-wellness-chatbot",
  "version": "1.0.0",
  "description": "AI-Powered Confidential Wellness Chatbot for Indian Youth",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "wellness",
    "chatbot",
    "mental-health",
    "ai",
    "youth"
  ],
  "author": "Aura Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^6.16.0"
  }
}
